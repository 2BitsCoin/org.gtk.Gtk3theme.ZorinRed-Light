{
  "id": "org.gtk.Gtk3theme.ZorinRed-Light",
  "branch": "3.22",
  "runtime": "org.gnome.Sdk",
  "build-extension": true,
  "sdk": "org.gnome.Sdk",
  "runtime-version": "3.28",
  "appstream-compose": false,
  "separate-locales": false,
  "modules": [
    {
      "name": "ZorinRed-Light",
      "buildsystem": "simple",
      "build-commands": [
        "install -dm755 /usr/share/runtime/share/themes/ZorinRed-Light/gtk-3.0",
        "cp -aL ZorinRed-Light/gtk-3.0/* /usr/share/runtime/share/themes/ZorinRed-Light/gtk-3.0",
        "cp -a ZorinRed-Light/index.theme /usr/share/runtime/share/themes/ZorinRed-Light"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/ZorinOS/zorin-desktop-themes/archive/2.0.8.tar.gz",
          "sha256": "b015e868a3cfd4ceea71c19a9a99f47d4460985c50b1b622bc814b3c9126dac7"
        }
      ]
    },
    {
      "name": "appdata",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -p ${FLATPAK_DEST}/share/appdata",
        "cp org.gtk.Gtk3theme.ZorinRed-Light.appdata.xml ${FLATPAK_DEST}/share/appdata",
        "appstream-compose --basename=org.gtk.Gtk3theme.ZorinRed-Light --prefix=${FLATPAK_DEST} --origin=flatpak org.gtk.Gtk3theme.ZorinRed-Light"
      ],
      "sources": [
        {
          "type": "file",
          "path": "org.gtk.Gtk3theme.ZorinRed-Light.appdata.xml"
        }
      ]
}
  ]
}
